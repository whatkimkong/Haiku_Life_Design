<div class="container">

  <h2 class="signUpTitle">Signup with Haiku Life Design</h2>

  <form class="signUpForm" action="/auth/signup" method="POST">

    <label for="username">Username:</label>
    <input
      class="input"
      type="text"
      name="username"
      autocomplete="off"
      required
    />

    <label for="email">Email:</label>
    <input
      class="input"
      type="email"
      name="email"
      autocomplete="off"
      required
    />

    <label for="password">Password:</label>
    <input
      class="input"
      type="password"
      name="password"
      autocomplete="off"
      required
    />

    <button type="submit" class="btn-mustard">Submit</button>
  </form>

  <p style="color: rgb(102, 99, 99)">{{errorMessage}}</p>
</div>