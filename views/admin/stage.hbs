<div class="container">

  <div class="blueprintBtns">
    <a href="/auth/login" class="btn-mustard blueprintBtnLink">Login!</a>
    <a href="/auth/signup" class="btn-mustard blueprintBtnLink">Sign Up!</a>

    <a href="/blueprint" class="btn-mustard blueprintBtnLink">Admins - Create
      Blueprint!</a>
    <a href="/stage" class="btn-mustard blueprintBtnLink">Admins - Create Stage!</a>
    <br />
    <br />
  </div>

  <div class="blueprintBody">
    <h2> Add a new Stage</h2>
    <form action="/blueprint/{{blueprintId}}/stage" method="POST">

      <label for="title">Title:</label>
      <input type="text" name="title" />
      <br />
      <br />

      <label for="description">Description</label>
      <textarea name="description" cols="30" rows="10"></textarea>
      <br />
      <br />

      <label for="tip">Tip</label>
      <textarea name="tip" cols="30" rows="10"></textarea>
      <br />
      <br />

      <button type="submit" class="btn-mustard">Save this stage</button>
    </form>
  </div>
</div>