
{{#if isLoggedIn }}
<div>
    <h2>Your Thing Shui Memento Chest</h2>
    <a href="/thingshui/create" class="btn-mustard">Add a thing shui</a>

</div>

<div class="haiku-card">
    {{#each thingshuis}}
    <div class="card haiku-border" style="width: 18rem;">
            {{#if image}}
            <img class="card" src="{{this.image}}" alt="Card image cap">
            {{/if}}
        <div class="card-body">
            <p class="card-text title-text">{{this.title}}</p>
            <a class="btn-mustard" href="" role="button">Edit</a>
        </div>
    </div>
    <br>
    <br>
    {{/each}}
    <br>
</div>

{{else }}

<h1>Your Mess is Missin' Out!!<h1>
<h4>Sign up to Haiku your life down to the bare necessities</h4>
  
{{/if }}